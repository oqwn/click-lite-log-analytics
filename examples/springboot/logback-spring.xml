<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Standard console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Click-Lite Log Analytics appender -->
    <appender name="LOG_ANALYTICS" class="com.example.loganalytics.LogAnalyticsAppender">
        <endpoint>http://localhost:20002/api/v1/ingest/logs</endpoint>
        <serviceName>spring-boot-app</serviceName>
    </appender>
    
    <!-- Async wrapper for analytics appender to prevent blocking -->
    <appender name="ASYNC_LOG_ANALYTICS" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOG_ANALYTICS" />
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ASYNC_LOG_ANALYTICS" />
    </root>
    
    <!-- Application-specific loggers -->
    <logger name="com.example" level="DEBUG" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.springframework.security" level="INFO" />
    
</configuration>